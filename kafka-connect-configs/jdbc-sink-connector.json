{
  "name": "jdbc-sink-connector",
  "config": {
    "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",
    "tasks.max": "1",
    "topics": "hourly-transaction-topic",
    "connection.url": "jdbc:mysql://mysql:3306/shopstream",
    "connection.user": "shopuser",
    "connection.password": "shoppassword",
    "auto.create": "true",
    "auto.evolve": "true",
    "insert.mode": "upsert",
    "pk.mode": "record_key",
    "pk.fields": "hour_window",
    "table.name.format": "hourly_summary",
    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "false",
    "transforms": "extractFields",
    "transforms.extractFields.type": "org.apache.kafka.connect.transforms.ExtractField$Value",
    "transforms.extractFields.field": "payload"
  }
}